{{!< default}}
<section id="main-body">
<div class="container">
	<div class="row">
		<div class="col-md-8">
			<article class="{{post_class}}">
				{{#post}}
					
                <!-- FQ Verification Tag -->
                <script src='http://c.fqtag.com/tag/implement-r.js?rt=display&org=MsJAmmlowWH4ur3I3Tac&fq=1&sl=1&p=GizGeek&fmt=banner&a={{title}}'></script>
					<header class="post-header">
						<h2>{{{title}}}</h2>
						
						{{#if feature_image}}
							<img src="{{img_url feature_image}}" alt="{{{title}}}" title="{{{title}}}" />
						{{/if}}
					</header>
					
					<section class="post-content">
						{{content}}
					</section>
					
					<footer class="post-footer">
						<div class="clearfix"></div>
						{{> share}}
						<div class="clearfix"></div>
					</footer>
				{{/post}}
			</article>
		</div>
		{{> sidebar}}
	</div>
</div>
</section>
